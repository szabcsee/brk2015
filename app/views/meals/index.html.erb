<h1>Listing meals</h1>

<table>
  <tr>
    <th>Foodtype</th>
    <th>Meal date</th>
    <th>Meal type</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meals.each do |meal| %>
  <tr>
    <td><%= meal.food_type %></td>
    <td><%= meal.date %></td>
    <td><%= meal.meal_type %></td>
    <td><%= meal.user.first_name %></td>
    <td><%= link_to 'Show', meal %></td>
    <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
    <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

